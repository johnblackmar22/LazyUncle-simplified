# Copy this file to .env to get started

# Demo mode uses local storage instead of Firebase
# Set to 'true' to run the app without Firebase
VITE_DEMO_MODE=true

# Firebase configuration (only needed if VITE_DEMO_MODE=false)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# OpenAI API Key for AI gift recommendations (for Netlify functions)
OPENAI_API_KEY=your_openai_api_key_here

# Optional features (for future use)
# VITE_STRIPE_PUBLIC_KEY=
# VITE_ENABLE_ANALYTICS=false 